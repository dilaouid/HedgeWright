{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["packages/common/src/*"],
      "@editor/*": ["packages/editor/src/*"]
    }
  },
  "include": ["packages/**/*"]
}